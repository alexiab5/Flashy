      <VBox layoutX="123.0" layoutY="183.0" prefHeight="164.0" prefWidth="518.0">
         <children>
            <HBox prefHeight="35.0" prefWidth="384.0">
               <children>
                  <Label prefHeight="37.0" prefWidth="199.0" text="Name" />
                  <TextArea fx:id="nameTextField" prefHeight="45.0" prefWidth="415.0" />
               </children>
            </HBox>
            <HBox prefHeight="80.0" prefWidth="400.0">
               <children>
                  <RadioButton fx:id="descriptionRadioButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="146.0" text="Add Description" />
